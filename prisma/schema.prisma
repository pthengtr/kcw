generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProductInfo {
  BCODE       String            @id
  XCODE       String?
  MCODE       String?
  PCODE       String?
  ACODE       String?
  DESCR       String?
  MODEL       String?
  BRAND       String?
  OEM         String?
  VENDOR      String?
  MAIN        Int
  STATUS      Int?
  LOCATION1   String?
  CODE1       String?
  SIZE1       String?
  SIZE2       String?
  SIZE3       String?
  PRICENET1   Float?
  QTYOH2      Int?
  QTYMIN      Int?
  QTYMAX      Int?
  QTYGET      Int?
  QTYPUT      Int?
  DATEAUDIT   DateTime?
  DATEUPDATE  DateTime?
  REMARKS     String?
  location    ProductLocation[]
  price       ProductPrice[]
  priceM      ProductPriceM[]
  unit        ProductUnit[]
  productCost ProductCost[]

  @@map("Lookup-ProductInfo")
}

model ProductLocation {
  BCODE       String
  Attribute   String
  Value       String
  productInfo ProductInfo @relation(fields: [BCODE], references: [BCODE])

  @@id([BCODE, Attribute])
  @@map("Lookup-ProductLocation")
}

model ProductPrice {
  BCODE       String
  Attribute   String
  Markup      String
  Value       Float
  productInfo ProductInfo @relation(fields: [BCODE], references: [BCODE])

  @@id([BCODE, Attribute])
  @@map("Lookup-ProductPrice")
}

model ProductPriceM {
  BCODE       String
  Attribute   String
  Markup      String
  Value       Float
  productInfo ProductInfo @relation(fields: [BCODE], references: [BCODE])

  @@id([BCODE, Attribute])
  @@map("Lookup-ProductPriceM")
}

model ProductUnit {
  BCODE         String
  Attribute     String
  Value         String
  NumberPerUnit Int
  productInfo   ProductInfo @relation(fields: [BCODE], references: [BCODE])

  @@id([Attribute, BCODE])
  @@map("Lookup-ProductUnit")
}

model ProductCost {
  BCODE       String      @id
  ISVAT       String?
  COSTSET1    Float?
  DISCNT      Float?
  DISCNT1     Float?
  DISCNT2     Float?
  DISCNT3     Float?
  DISCNT4     Float?
  COSTNET     Float?
  productInfo ProductInfo @relation(fields: [BCODE], references: [BCODE])

  @@map("Lookup-ProductCost")
}
